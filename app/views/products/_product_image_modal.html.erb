<div class="modal" id="imageModal<%= counter.to_s%>">
    <div onclick="refs.imageModal<%= counter.to_s%>.close()" class="modal-background"></div>
    <div class="modal-content">
        <%= image_tag(product_image.image) if product_image.image.attached? %>
    </div>
    <button class="modal-close is-large" aria-label="close" onclick="refs.imageModal<%= counter.to_s%>.close()"></button>
</div>