<!DOCTYPE html>
<html>
  <head>
    <title>Unified Apparel</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.1/css/bulma.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>

  <body class="main">
    <section class="section">
      <div class="container">
        <div class="columns">
          <!-- Nav bar -->
          <div class="column is-2">
            <figure class="image is-128x128">
              <%= link_to image_tag("2018LOGO.png"), root_path, class: "link" %>
            </figure>
            <aside class="menu">
              <p class="menu-label">Products</p>
              <ul class="menu-list">
                <li><%= link_to "All Products", all_products_products_path, class: "link"  %></li>
                <li><%= link_to "View by Category", categories_path, class: "link"  %></li>
              </ul>
              <p class="menu-label">General</p>
              <ul class="menu-list">
                <li><a>Sign In</a></li> <!-- Create an account in here too -->
                <li><%= link_to "About", about_products_path, class: "link"  %></li>
                <li><a>Contact Us</a></li>
              </ul>
            </aside>
          </div>
          <!-- The rest of the content-->
          <div class="column is-10">
            <i class="fa" style="font-size:24px">&#xf07a;</i>
            <span class='badge badge-warning' id='lblCartCount'> 5 </span>
            <%= yield %>
          </div>
        </div>
      </div>
    </section>
    <footer class="footer p-4">
      <p class="content has-text-centered"><strong><%= link_to "Unified Apparel", root_path %></strong> - All Rights Reserved 2025</p>
    </footer>
  </body>
</html>
