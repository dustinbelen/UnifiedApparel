<h2 class="title is-size-4">Log in</h2>
<hr>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: "description" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "description"  %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "description"  %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "button is-dark" %>
  </div>
<% end %>
<br>

<%= render "devise/shared/links" %>
